rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Guardian Governance: Tier 2 Hard-Block for MYAUDIT v1.2
    match /ledgers/{year}/entries/{entryId} {
      
      // allow read access for authenticated owners
      allow read: if request.auth != null;

      // Tier 2: Block ALL updates to entries marked as LOCKED_FOR_AUDIT
      allow update: if request.auth != null && 
                    resource.data.status != "LOCKED_FOR_AUDIT";

      // Tier 2: Enforce e-invoice requirement for transactions > RM 10k
      allow create: if request.auth != null &&
                    (request.resource.data.amount <= 10000 || 
                     request.resource.data.eInvoiceRef != null);
    }
  }
}
